---
import {Image} from 'astro:assets';
import Team1 from '../images/team-image1.jpg';
import Team2 from '../images/team-image2.jpg';
import Team3 from '../images/team-image3.jpg';

import Fb from '../icon/Fb.astro';
import Ig from '../icon/Ig.astro';
import Tw from '../icon/Tw.astro';
---

<section id="chef" class="bg-gray-100 py-32">
    <div class="max-w-6xl mx-auto px-4 space-y-16">
        <div class="text-center text-gray-600 space-y-2">
            <p class="text-sm tracking-widest">THEY ARE NICE & FRIENDLY</p>
            <h2 class="text-3xl font-bold text-black">Meet our chefs</h2>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
            <div class="space-y-4">
                <div class="group relative overflow-hidden">
                    <Image class="group-hover:scale-110 delay-75 ease-out duration-300" src={Team1} alt="team-1" />
                    <div class="text-white bg-[rgba(0,0,0,.7)] absolute translate-y-full group-hover:translate-y-0 duration-500 ease-out top-0 left-0 w-full h-full flex flex-col justify-center items-center">
                        <div class="px-16 text-center space-y-8">
                            <p>Lorem ipsum dolor sit. Lorem ipsum dolor sit amet, consectetur adipisicing elit. A, rerum, mollitia, maiores in cupiditate aperiam</p>
                            <div class="flex justify-center gap-2">
                                <a class="rounded-full bg-[rgba(0,0,0,.3)] hover:bg-red-500 p-3" href="#top">
                                    <span class="sr-only">facebook</span>
                                    <Fb />
                                </a>
                                <a class="rounded-full bg-[rgba(0,0,0,.3)] hover:bg-red-500 p-3" href="#top">
                                    <span class="sr-only">twitter</span>
                                    <Tw />
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <h3 class="text-2xl font-bold text-black">New Catherine</h3>
