                                <a class="rounded-full bg-[rgba(0,0,0,.3)] hover:bg-red-500 p-3" href="#top">
                                    <span class="sr-only">instagram</span>
                                    <Ig />
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <h3 class="text-2xl font-bold text-black">Lindsay Perlen</h3>
                    <p class="text-sm text-gray-600">OWNER & MANAGER</p>
                </div>
            </div>

            <div class="space-y-4">
                <div class="group relative overflow-hidden">
                    <Image class="group-hover:scale-110 delay-75 ease-out duration-300" src={Team3} alt="team-3" />
