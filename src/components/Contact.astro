<section id="contact" class="py-32">
    <div class="max-w-6xl mx-auto px-4 grid md:grid-cols-2 gap-16 md:gap-8 lg:gap-16">
        <div class="overflow-hidden">
            <iframe title="maps" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d7750.725888144364!2d100.565704!3d13.756973!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x30e29e8d23e783e5%3A0xf51ce6427b7918fc!2sG%20Tower!5e0!3m2!1sen!2sus!4v1705159108251!5m2!1sen!2sus" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>

        <div class="space-y-8">
            <h2 class="text-3xl font-bold">Contact US</h2>

            <form id="form" name="form" class="grid grid-cols-2 gap-8">
                <input id="name" class="border-b focus:outline-none p-3" type="text" name="name" placeholder="Full Name" autocomplete="name" />
                <input id="email" class="border-b focus:outline-none p-3" type="text" name="email" placeholder="Email" autocomplete="email"/>
                <input id="subject" class="border-b focus:outline-none p-3 col-span-2" type="text" name="subject" placeholder="Subject" autocomplete="subject"/>
                <textarea id="message" class="border-b focus:outline-none p-3 min-h-32 col-span-2" placeholder="your message" autocomplete="message"></textarea>

                <button class="bg-red-600 text-white col-span-2 py-3">Send Message</button>
            </form>
        </div>
    </div>
</section>
